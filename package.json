{
	"name": "hed-lsp",
	"displayName": "HED Annotation Tools",
	"description": "Language Server Protocol implementation for HED (Hierarchical Event Descriptors)",
	"author": "HED Working Group",
	"license": "MIT",
	"version": "0.3.3",
	"repository": {
		"type": "git",
		"url": "https://github.com/hed-standard/hed-lsp"
	},
	"publisher": "neuromechanist",
	"icon": "images/hed-icon.png",
	"categories": [
		"Linters",
		"Programming Languages",
		"Other"
	],
	"keywords": [
		"hed",
		"hierarchical event descriptors",
		"bids",
		"neuroimaging",
		"eeg",
		"mri"
	],
	"engines": {
		"vscode": "^1.100.0"
	},
	"activationEvents": [
		"onLanguage:json",
		"onLanguage:plaintext",
		"workspaceContains:**/*.tsv"
	],
	"main": "./client/out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "HED",
			"properties": {
				"hed.schemaVersion": {
					"type": "string",
					"default": "8.4.0",
					"description": "HED schema version to use for validation"
				},
				"hed.maxNumberOfProblems": {
					"type": "number",
					"default": 100,
					"description": "Maximum number of problems to report per file"
				},
				"hed.validateOnChange": {
					"type": "boolean",
					"default": true,
					"description": "Validate HED strings while typing"
				},
				"hed.debounceMs": {
					"type": "number",
					"default": 300,
					"description": "Debounce time in milliseconds for validation on change"
				},
				"hed.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the HED language server"
				},
				"hed.enableSemanticSearch": {
					"type": "boolean",
					"default": false,
					"description": "Enable AI-powered semantic search for HED tags. Requires downloading a ~600MB model on first use."
				}
			}
		},
		"semanticTokenScopes": [
			{
				"language": "json",
				"scopes": {
					"type": [
						"entity.name.tag.hed"
					],
					"class": [
						"entity.name.tag.library.hed"
					],
					"function": [
						"keyword.control.definition.hed"
					],
					"keyword": [
						"keyword.other.reserved.hed"
					],
					"variable": [
						"variable.other.placeholder.hed"
					],
					"number": [
						"constant.numeric.value.hed"
					],
					"string": [
						"entity.name.tag.path.hed"
					],
					"namespace": [
						"storage.type.library.hed"
					]
				}
			}
		],
		"configurationDefaults": {
			"editor.semanticTokenColorCustomizations": {
				"rules": {
					"type:hed": "#4EC9B0",
					"class:hed": "#9CDCFE",
					"function:hed": "#DCDCAA",
					"keyword:hed": "#C586C0",
					"variable:hed": "#CE9178",
					"number:hed": "#B5CEA8",
					"namespace:hed": "#569CD6"
				}
			}
		}
	},
	"workspaces": [
		"client",
		"server"
	],
	"scripts": {
		"vscode:prepublish": "npm run esbuild-base -- --production",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"esbuild-base": "node esbuild.config.mjs",
		"esbuild": "npm run esbuild-base",
		"esbuild-watch": "npm run esbuild-base -- --watch",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"check": "biome check .",
		"spellcheck": "cspell \"**/*.{ts,md}\""
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@types/node": "^22",
		"cspell": "^9.4.0",
		"esbuild": "^0.27.2",
		"typescript": "^5.7.2"
	}
}
